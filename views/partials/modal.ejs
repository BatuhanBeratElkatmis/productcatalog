<!-- 
    Yeniden Kullanılabilir Onay Modalı
    
    Bu modalı bir sayfaya eklemek için:
    <%- include('../partials/modal', { 
        modalId: 'benzersiz-modal-id', 
        modalTitle: 'Onay Gerekli', 
        modalMessage: 'Bu işlemi yapmak istediğinizden emin misiniz?',
        modalConfirmBtnText: 'Evet, Onayla'
    }) %>

    Bir butondan tetiklemek için:
    <button type"button" class="btn btn-danger" 
            data-modal-toggle="benzersiz-modal-id" 
            data-modal-form-target="#silme-form-id">
        Sil
    </button>

    Modal, 'data-modal-form-target' ile belirtilen formu bulup submit edecektir.
-->
<div class="modal-overlay" id="<%= modalId %>" tabindex="-1" aria-hidden="true">
    <div class="modal-dialog" role="dialog" aria-modal="true" aria-labelledby="<%= modalId %>-title">
        <div class="modal-header">
            <h5 class="modal-title" id="<%= modalId %>-title">
                <%= modalTitle %>
            </h5>
            <button type="button" class="modal-close-btn" data-modal-close="<%= modalId %>" aria-label="Kapat">
                &times;
            </button>
        </div>
        <div class="modal-body">
            <p><%= modalMessage %></p>
        </div>
        <div class="modal-footer">
            <button type="button" class="btn btn-secondary" data-modal-close="<%= modalId %>">
                İptal
            </button>
            <button type="button" class="btn btn-danger" id="<%= modalId %>-confirm-btn">
                <%= modalConfirmBtnText %>
            </button>
        </div>
    </div>
</div>
