<!DOCTYPE html>
<html lang="tr">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title><%= title %> | <%= constants.APP_NAME %></title>

    <!-- CSS -->
    <link rel="stylesheet" href="/css/main.css">

    <!-- Favicon -->
    <link rel="icon" type="image/x-icon" href="/assets/images/favicon.ico">

    <!-- Meta Tags -->
    <meta name="description" content="<%= constants.APP_NAME %> - En kaliteli ürünler en uygun fiyatlarla">
    <meta name="keywords" content="ürün, katalog, alışveriş, elektronik, moda, spor">
</head>
<body>
    <!-- Header -->
    <%- include('../partials/header') %>

    <!-- Navigation -->
    <%- include('../partials/navbar') %>

    <!-- Main Content -->
    <main class="main-content">
        <% if (typeof error !== 'undefined' && error) { %>
            <div class="alert alert-error">
                <strong>Hata!</strong> <%= error %>
            </div>
        <% } %>

        <% if (typeof errors !== 'undefined' && errors.length > 0) { %>
            <div class="alert alert-error">
                <strong>Hatalar:</strong>
                <ul>
                    <% errors.forEach(function(error) { %>
                        <li><%= error %></li>
                    <% }); %>
                </ul>
            </div>
        <% } %>

        <% if (typeof success !== 'undefined' && success) { %>
            <div class="alert alert-success">
                <strong>Başarılı!</strong> <%= success %>
            </div>
        <% } %>

        <%- body %>
    </main>

    <!-- Footer -->
    <%- include('../partials/footer') %>

    <!-- JavaScript -->
    <!-- HATA 4 DÜZELTMESİ: type="module" eklendi -->
    <script type="module" src="/js/main.js"></script>
</body>
</html>

