<!DOCTYPE html>
<html lang="tr">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title><%= title %> | <%= constants.APP_NAME %></title>
    <link rel="stylesheet" href="/css/main.css">
    <link rel="icon" type="image/x-icon" href="/assets/images/favicon.ico">
    <meta name="description" content="<%= constants.APP_NAME %> - En kaliteli ürünler en uygun fiyatlarla">
    <meta name="keywords" content="ürün, katalog, alışveriş, elektronik, moda, spor">
</head>
<body>
    <%- include('../partials/header') %>
    <%- include('../partials/navbar') %>
    <main class="main-content">
        <!-- Hero Banner -->
        <section class="hero">
            <div class="container">
                <div class="hero-content">
                    <h1 class="hero-title">Yeni Ürünler Geldi!</h1>
                    <p class="hero-subtitle">Yeni sezon fırsatlarını keşfedin ve en kaliteli ürünlere sahip olun.</p>
                    <a href="/products" class="btn btn-primary btn-lg">Ürünleri Keşfet</a>
                </div>
            </div>
        </section>

        <!-- Popular Categories -->
        <section class="section categories-section">
            <div class="container">
                <h2 class="section-title">Popüler Kategoriler</h2>
                <div class="categories-grid">
                    <% categories.forEach(function(category) { %>
                        <a href="/products?category=<%= category.slug %>" class="category-card">
                            <div class="category-icon">
                                <% if (category.slug === 'electronics') { %>📱<% } %>
                                <% if (category.slug === 'fashion') { %>👕<% } %>
                                <% if (category.slug === 'home') { %>🏠<% } %>
                                <% if (category.slug === 'sports') { %>⚽<% } %>
                                <% if (category.slug === 'books') { %>📚<% } %>
                            </div>
                            <h3 class="category-name"><%= category.name %></h3>
                            <p class="category-description"><%= category.description %></p>
                        </a>
                    <% }); %>
                </div>
            </div>
        </section>

        <!-- Featured Products -->
        <section class="section products-section">
            <div class="container">
                <div class="section-header">
                    <h2 class="section-title">Öne Çıkan Ürünler</h2>
                    <a href="/products" class="section-link">Tümünü Gör →</a>
                </div>
                
                <div class="products-grid">
                    <% popularProducts.forEach(function(product) { %>
                        <%- include('../partials/product-card', { product }) %>
                    <% }); %>
                </div>
            </div>
        </section>

        <!-- Features Section -->
        <section class="section features-section">
            <div class="container">
                <div class="features-grid">
                    <div class="feature-item">
                        <div class="feature-icon">🚚</div>
                        <h3 class="feature-title">Ücretsiz Kargo</h3>
                        <p class="feature-description">150 TL ve üzeri alışverişlerde ücretsiz kargo</p>
                    </div>
                    <div class="feature-item">
                        <div class="feature-icon">↩️</div>
                        <h3 class="feature-title">Kolay İade</h3>
                        <p class="feature-description">30 gün içinde ücretsiz iade imkanı</p>
                    </div>
                    <div class="feature-item">
                        <div class="feature-icon">🔒</div>
                        <h3 class="feature-title">Güvenli Alışveriş</h3>
                        <p class="feature-description">%100 güvenli ödeme sistemi</p>
                    </div>
                    <div class="feature-item">
                        <div class="feature-icon">📞</div>
                        <h3 class="feature-title">7/24 Destek</h3>
                        <p class="feature-description">Müşteri hizmetleri her zaman yanınızda</p>
                    </div>
                </div>
            </div>
        </section>
    </main>
    <%- include('../partials/footer') %>
    <script type="module" src="/js/main.js"></script>
</body>
</html>
