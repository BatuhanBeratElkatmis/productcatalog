<!DOCTYPE html>
<html lang="tr">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title><%= title %> | <%= constants.APP_NAME %></title>
    <link rel="stylesheet" href="/css/main.css">
    <link rel="icon" type="image/x-icon" href="/assets/images/favicon.ico">
    <meta name="description" content="<%= constants.APP_NAME %> - En kaliteli ürünler en uygun fiyatlarla">
    <meta name="keywords" content="ürün, katalog, alışveriş, elektronik, moda, spor">
</head>
<body>
    <%- include('../../partials/header') %>
    <%- include('../../partials/navbar') %>
    <main class="main-content">
        <% if (typeof error !== 'undefined' && error) { %>
            <div class="alert alert-error"><strong>Hata!</strong> <%= error %></div>
        <% } %>
        <% if (typeof errors !== 'undefined' && errors.length > 0) { %>
            <div class="alert alert-error">
                <strong>Hatalar:</strong>
                <ul><% errors.forEach(function(error) { %><li><%= error %></li><% }); %></ul>
            </div>
        <% } %>
        <div class="categories-page">
            <div class="container">
                <div class="page-header">
                    <h1 class="page-title">Kategori Yönetimi</h1>
                    <p class="page-subtitle">Sistemdeki kategorileri yönetin ve yeni kategoriler ekleyin</p>
                </div>

                <!-- Add Category Form -->
                <div class="add-category-section">
                    <h2 class="section-title" style="text-align: left; margin-bottom: 1rem;">Yeni Kategori Ekle</h2>
                    <form action="/categories" method="POST" class="category-form">
                        <div class="form-grid" style="grid-template-columns: 1fr 1fr 1fr; align-items: flex-end;">
                            <div class="form-group">
                                <label for="name" class="form-label">Kategori Adı *</label>
                                <input type="text" id="name" name="name" class="form-input" placeholder="Örn: Elektronik" required>
                            </div>
                            <div class="form-group">
                                <label for="description" class="form-label">Açıklama</label>
                                <input type="text" id="description" name="description" class="form-input" placeholder="Kısa bir açıklama">
                            </div>
                            <button type="submit" class="btn btn-primary">Ekle</button>
                        </div>
                    </form>
                </div>

                <!-- Categories List -->
                <div class="categories-section">
                    <h2 class="section-title" style="text-align: left; margin-bottom: 1rem;">Mevcut Kategoriler</h2>
                    <% if (categories.length === 0) { %>
                        <p>Henüz hiç kategori eklenmemiş.</p>
                    <% } else { %>
                        <div class="table-container">
                            <table class="categories-table">
                                <thead>
                                    <tr>
                                        <th>Kategori Adı</th>
                                        <th>Açıklama</th>
                                        <th>Ürün Sayısı</th>
                                        <th>İşlemler</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    <% categories.forEach(function(category) { %>
                                        <tr>
                                            <td class="category-name"><%= category.name %></td>
                                            <td class="category-description"><%= category.description %></td>
                                            <td><span class="count-badge"><%= category.productCount %> ürün</span></td>
                                            <td class="category-actions">
                                                <a href="/products?category=<%= category._id %>" class="btn btn-secondary btn-sm">Ürünleri Gör</a>
                                                <form action="/categories/<%= category._id %>/delete?_method=DELETE" method="POST" class="delete-form" onsubmit="return confirm('Bu kategoriyi silmek istediğinizden emin misiniz?')">
                                                    <button type="submit" class="btn btn-danger btn-sm">Sil</button>
                                                </form>
                                            </td>
                                        </tr>
                                    <% }); %>
                                </tbody>
                            </table>
                        </div>
                    <% } %>
                </div>
            </div>
        </div>
    </main>
    <%- include('../../partials/footer') %>
    <script src="/js/main.js"></script>
</body>
</html>
