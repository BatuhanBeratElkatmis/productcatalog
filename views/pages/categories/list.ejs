<!DOCTYPE html>
<html lang="tr">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title><%= title %> | <%= constants.APP_NAME %></title>
    <link rel="stylesheet" href="/css/main.css">
    <link rel="icon" type="image/x-icon" href="/assets/images/favicon.ico">
    <meta name="description" content="<%= constants.APP_NAME %> - En kaliteli ürünler en uygun fiyatlarla">
    <meta name="keywords" content="ürün, katalog, alışveriş, elektronik, moda, spor">
</head>
<body>
    <%- include('../../partials/header') %>
    <%- include('../../partials/navbar') %>
    <main class="main-content">
        <% if (typeof error !== 'undefined' && error) { %>
            <div class="alert alert-error"><strong>Hata!</strong> <%= error %></div>
        <% } %>
        <% if (typeof errors !== 'undefined' && errors.length > 0) { %>
            <div class="alert alert-error">
                <strong>Hatalar:</strong>
                <ul><% errors.forEach(function(error) { %><li><%= error %></li><% }); %></ul>
            </div>
        <% } %>
        <div class="categories-page">
            <div class="container">
                <div class="page-header">
                    <h1 class="page-title">Kategori Yönetimi</h1>
                    <p class="page-subtitle">Yeni kategoriler ekleyin veya mevcut olanları yönetin</p>
                </div>

                <div class="categories-layout">
                    <!-- New Category Form -->
                    <div class="category-form-container">
                        <h2 class="section-title">Yeni Kategori Ekle</h2>
                        <form action="/categories" method="POST" class="form category-form">
                            <div class="form-group">
                                <label for="name" class="form-label">Kategori Adı *</label>
                                <input type="text" id="name" name="name" class="form-input" required>
                            </div>
                            <div class="form-group">
                                <label for="description" class="form-label">Açıklama</label>
                                <textarea id="description" name="description" class="form-textarea" rows="3"></textarea>
                            </div>
                            <button type="submit" class="btn btn-primary">Yeni Kategori Ekle</button>
                        </form>
                    </div>

                    <!-- Category List -->
                    <% if (categories.length === 0) { %>
                        <div class="empty-state">
                            <h3 class="empty-title">Kategori Bulunamadı</h3>
                            <p class="empty-description">Henüz hiç kategori eklenmemiş.</p>
                        </div>
                    <% } else { %>
                        <div class="category-list-container">
                            <h2 class="section-title">Mevcut Kategoriler (<%= categories.length %>)</h2>
                            <table class="data-table">
                                <thead>
                                    <tr>
                                        <th>Kategori Adı</th>
                                        <th>Açıklama</th>
                                        <th>Ürün Sayısı</th>
                                        <th>İşlemler</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    <% categories.forEach(function(category) { %>
                                        <tr>
                                            <td class="category-name"><%= category.name %></td>
                                            <td class="category-description"><%= category.description %></td>
                                            <td><span class="count-badge"><%= category.productCount %> ürün</span></td>
                                            <td class="category-actions">
                                                <a href="/products?category=<%= category.slug %>" class="btn btn-secondary btn-sm">Ürünleri Gör</a>
                                                
                                                <!-- HATA 1 DÜZELTMESİ: confirm() kaldırıldı, modal tetikleyici eklendi -->
                                                <form id="delete-category-form-<%= category._id %>" action="/categories/<%= category._id %>/delete?_method=DELETE" method="POST" class="delete-form">
                                                    <button type="button" class="btn btn-danger btn-sm"
                                                            data-modal-toggle="deleteCategoryModal-<%= category._id %>"
                                                            data-modal-form-target="#delete-category-form-<%= category._id %>">
                                                        Sil
                                                    </button>
                                                </form>
                                            </td>
                                        </tr>
                                    <% }); %>
                                </tbody>
                            </table>
                        </div>
                    <% } %>
                </div>
            </div>
        </div>
    </main>

    <!-- HATA 1 DÜZELTMESİ: Kategoriler için dinamik modallar eklendi -->
    <% categories.forEach(function(category) { %>
        <%- include('../../partials/modal', { 
            modalId: `deleteCategoryModal-${category._id}`, 
            modalTitle: 'Kategoriyi Sil', 
            modalMessage: `"${category.name}" kategorisini silmek istediğinizden emin misiniz? Bu işlem geri alınamaz.`,
            modalConfirmBtnText: 'Evet, Sil'
        }) %>
    <% }); %>

    <%- include('../../partials/footer') %>
    <script type="module" src="/js/main.js"></script>
</body>
</html>
